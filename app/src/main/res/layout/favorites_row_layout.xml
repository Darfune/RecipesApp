<!--                app:srcCompat="@drawable/ic_play_video"-->
<!--                app:tint="@color/video" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>